// Verificar si el usuario estÃ¡ autenticado
async function checkAuth() {
  console.log('ğŸ” Verificando autenticaciÃ³n...');
  const token = localStorage.getItem('token');
  const userStr = localStorage.getItem('user');

  console.log('ğŸ”‘ Token encontrado:', token ? 'SÃ­' : 'No');
  console.log('ğŸ‘¤ Usuario encontrado:', userStr ? 'SÃ­' : 'No');

  if (!token || !userStr) {
    console.log('âŒ No hay token o usuario, redirigiendo al login');
    redirectToLogin();
    return;
  }

  // Modo desarrollo: permitir saltarse la verificaciÃ³n del servidor
  const isDevelopment = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
  if (isDevelopment && localStorage.getItem('skipServerCheck') === 'true') {
    console.log('ğŸ”§ Modo desarrollo: saltando verificaciÃ³n del servidor');
    currentUser = JSON.parse(userStr);
    showMainApp();
    loadRoute(currentRoute);
    return;
  }

  try {
    console.log('ğŸ“¡ Verificando token con el servidor...');
    
    // Agregar timeout a la peticiÃ³n
    const controller = new AbortController();
    const timeoutId = setTimeout(() => controller.abort(), 5000); // 5 segundos timeout
    
    const response = await fetch('/api/pedidos', {
      headers: {
        'Authorization': `Bearer ${token}`
      },
      signal: controller.signal
    });
    
    clearTimeout(timeoutId);
    console.log('ğŸ“¥ Respuesta del servidor:', response.status, response.statusText);

    if (!response.ok) {
      const errorText = await response.text();
      console.error('âŒ Error del servidor:', errorText);
      throw new Error(`Token invÃ¡lido: ${response.status} - ${errorText}`);
    }

    console.log('âœ… Token vÃ¡lido, mostrando aplicaciÃ³n');
    currentUser = JSON.parse(userStr);
    showMainApp();
    loadRoute(currentRoute);
  } catch (error: unknown) {
    console.error('ğŸ’¥ Error de autenticaciÃ³n:', error);
    
    if (error instanceof Error) {
    if (error.name === 'AbortError') {
      console.error('â° Timeout: El servidor no responde');
      alert('Error: No se puede conectar con el servidor. AsegÃºrate de que el backend estÃ© corriendo en el puerto 8001.');
    } else if (error.message.includes('fetch')) {
      console.error('ğŸŒ Error de conexiÃ³n');
      alert('Error de conexiÃ³n: No se puede conectar con el servidor. Verifica que el backend estÃ© corriendo.');
      }
    }
    
    console.log('ğŸ§¹ Limpiando localStorage y redirigiendo al login');
    localStorage.removeItem('token');
    localStorage.removeItem('user');
    redirectToLogin();
  }
}

// Redirigir al login
function redirectToLogin() {
  if (window.location.pathname !== '/login') {
    window.location.href = '/login';
  }
}

// Mostrar la aplicaciÃ³n principal
function showMainApp() {
  const loadingElement = document.getElementById('loading');
  const mainAppElement = document.getElementById('mainApp');
  
  if (loadingElement) loadingElement.classList.add('hidden');
  if (mainAppElement) mainAppElement.classList.remove('hidden');

  // Mostrar informaciÃ³n del usuario
  const userInfo = document.getElementById('userInfo');
  if (userInfo && currentUser) {
    userInfo.textContent = `Hola, ${currentUser.nombre || currentUser.telegramId}`;
  }
}

// FunciÃ³n de logout
function logout() {
  if (confirm('Â¿EstÃ¡s seguro de que quieres cerrar sesiÃ³n?')) {
    localStorage.removeItem('token');
    localStorage.removeItem('user');
    window.location.href = '/login';
  }
}

// NavegaciÃ³n
document.addEventListener('click', (e) => {
  const target = e.target as HTMLElement;
  if (target.matches('[data-route]') || target.closest('[data-route]')) {
    const button = target.matches('[data-route]') ? target : target.closest('[data-route]') as HTMLElement;
    const route = button.getAttribute('data-route');
    if (route) {
    navigateTo(route);
    }
  }
});

function navigateTo(route: string) {
  currentRoute = route;
  
  // Actualizar botones activos
  document.querySelectorAll('.nav-button, .mobile-nav-button').forEach(btn => {
    btn.classList.remove('active');
  });
  
  document.querySelectorAll(`[data-route="${route}"]`).forEach(btn => {
    btn.classList.add('active');
  });
  
  loadRoute(route);
}

