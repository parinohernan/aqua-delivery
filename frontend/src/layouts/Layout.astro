---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sistema de gestión de delivery de agua" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="stylesheet" href="/styles.css" />
<link rel="stylesheet" href="/src/styles/informes.css" />
<link rel="stylesheet" href="/src/styles/productos.css" />
<link rel="stylesheet" href="/src/styles/clientes.css" />
<link rel="stylesheet" href="/src/styles/pedidos.css" />
<link rel="stylesheet" href="/src/styles/selectors.css" />
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
    <title>{title}</title>
    
    <!-- Configuración de la API -->
    <script>
      window.API_CONFIG = {
        BASE_URL: 'https://back-adm.fly.dev',
        ENDPOINTS: {
          LOGIN: '/auth/login',
          CLIENTES: '/api/clientes',
          PRODUCTOS: '/api/productos',
          PEDIDOS: '/api/pedidos',
          PAGOS: '/api/pagos',
          ZONAS: '/api/zonas',
          TIPOS_PAGO: '/api/tiposdepago',
          INFORMES: '/api/informes'
        },
        getUrl: function(endpoint) {
          return this.BASE_URL + endpoint;
        },
        getEndpointUrl: function(endpointName) {
          const endpoint = this.ENDPOINTS[endpointName];
          if (!endpoint) {
            throw new Error(`Endpoint no encontrado: ${endpointName}`);
          }
          return this.getUrl(endpoint);
        }
      };
    </script>
  </head>
  <body>
    <slot />
    <!-- Leaflet JavaScript -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  
  * {
    box-sizing: border-box;
  }
</style>
