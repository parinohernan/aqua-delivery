---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sistema de gestión de delivery de agua" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#6366f1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="AquaDelivery" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="msapplication-TileColor" content="#6366f1" />
    <meta name="msapplication-tap-highlight" content="no" />
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    
    <!-- PWA Configuration -->
    <script src="/pwa-config.js" is:inline></script>
    
    <!-- Map PWA Configuration -->
    <script src="/map-pwa.js" is:inline></script>
    
    <!-- Apple Touch Icons -->
    <link rel="apple-touch-icon" href="/icon-192.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/icon-192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icon-192.png" />
    <link rel="apple-touch-icon" sizes="167x167" href="/icon-192.png" />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/informes.css" />
    <link rel="stylesheet" href="/productos.css" />
    <link rel="stylesheet" href="/clientes.css" />
    <link rel="stylesheet" href="/pedidos.css" />
    <link rel="stylesheet" href="/selectors.css" />
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="/leaflet.css" />
    <title>{title}</title>
    
    <!-- Configuración de la API -->
    <script>
      window.API_CONFIG = {
        BASE_URL: 'https://back-adm.fly.dev',
        ENDPOINTS: {
          LOGIN: '/auth/login',
          CLIENTES: '/api/clientes',
          PRODUCTOS: '/api/productos',
          PEDIDOS: '/api/pedidos',
          PAGOS: '/api/pagos',
          ZONAS: '/api/zonas',
          TIPOS_PAGO: '/api/tiposdepago',
          INFORMES: '/api/informes'
        },
        getUrl: function(endpoint) {
          return this.BASE_URL + endpoint;
        },
        getEndpointUrl: function(endpointName) {
          const endpoint = this.ENDPOINTS[endpointName];
          if (!endpoint) {
            throw new Error(`Endpoint no encontrado: ${endpointName}`);
          }
          return this.getUrl(endpoint);
        }
      };
    </script>
  </head>
  <body>
    <slot />
    <!-- Leaflet JavaScript -->
    <script src="/leaflet.js" is:inline></script>
    
    <!-- Sistema de Notificaciones -->
    <script src="/js/utils/notifications.js" is:inline></script>
    
    <!-- Service Worker Registration -->
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(registration => {
              console.log('✅ Service Worker registrado exitosamente:', registration.scope);
            })
            .catch(error => {
              console.log('❌ Error registrando Service Worker:', error);
            });
        });
      }
    </script>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  
  * {
    box-sizing: border-box;
  }
</style>
